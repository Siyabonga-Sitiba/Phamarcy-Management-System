@using Phamarcy_Management__System.Models.PharmacistModels
@model PrescriptionUploadViewModel
@{
    ViewData["Title"] = "Pharmacist Dashboard";
    Layout = "_PharmacistLayout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Pharmacist Dashboard</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 1.1rem;
            min-height: 100vh;
            margin: 0;
            position: relative;
            background-color: #f8f9fa;
        }

        .watermark-svg {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            pointer-events: none;
            user-select: none;
            z-index: 0;
            opacity: 0.06;
            width: 300px;
            height: 300px;
            color: #000;
        }

        .dashboard-header {
            font-size: 2rem;
            font-weight: bold;
        }

        .dashboard-subtext {
            font-size: 1.2rem;
        }

        .card h5 {
            font-size: 1.5rem;
        }

        .card p {
            font-size: 1.1rem;
        }

        .card .btn {
            font-size: 1.1rem;
            padding: 0.6rem 1.2rem;
        }

        .welcome-card {
            background-color: #ffffff;
            border: none;
            padding: 2rem;
            margin-bottom: 2rem;
            text-align: center;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
        }
    </style>
</head>
<body>
    <div class="watermark-svg">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
            <text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" font-family="Arial, sans-serif" font-size="48" fill="currentColor">Rx</text>
        </svg>
    </div>

    <div class="container py-5">
        <div class="welcome-card rounded shadow">
            <h2 class="dashboard-header text-primary">Welcome Pharmacist</h2>
            <p class="dashboard-subtext text-muted">Choose an action below to manage prescriptions and medications</p>
        </div>

        <div class="row g-4">
            <!-- Upload Prescription Card -->
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0 p-3">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bi bi-file-earmark-arrow-up display-4 text-primary"></i>
                        </div>
                        <h5 class="card-title">Load a Prescription</h5>
                        <p class="card-text">Add scanned prescriptions and related medication data.</p>
                        <a class="btn btn-outline-primary" href="/Pharmasist/UploadPrescription">Open Form</a>
                    </div>
                </div>
            </div>

            <!-- Dispense Prescription Card -->
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0 p-3">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bi bi-clipboard-check display-4 text-success"></i>
                        </div>
                        <h5 class="card-title">Dispense</h5>
                        <p class="card-text">Mark prescriptions as dispensed with repeat/allergy checks.</p>
                        <a class="btn btn-outline-primary" href="/Pharmasist/DispenseNew">View Queue</a>
                    </div>
                </div>
            </div>

            <!-- Add Doctor Card -->
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0 p-3">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bi bi-person-plus display-4 text-secondary"></i>
                        </div>
                        <h5 class="card-title">+ Add Doctor</h5>
                        <p class="card-text">Create a new doctor profile.</p>
                        <a class="btn btn-outline-primary" href="/Pharmasist/AddDoctor">Add new Doctor</a>
                    </div>
                </div>
            </div>

            <!-- Reports Card -->
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0 p-3">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bi bi-bar-chart-line display-4 text-info"></i>
                        </div>
                        <h5 class="card-title">Reports</h5>
                        <p class="card-text">Generate and download medication dispense reports in PDF.</p>
                        <a class="btn btn-outline-info" data-bs-toggle="collapse" href="#reportSection">Generate</a>
                    </div>
                </div>
            </div>

            <!-- Checked Out Card -->
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0 p-3">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bi bi-bag-check display-4 text-warning"></i>
                        </div>
                        <h5 class="card-title">Checked Out</h5>
                        <p class="card-text">Manage prescriptions that have been checked out.</p>
                        <a class="btn btn-outline-primary" href="/Pharmasist/CheckedOut">Manage</a>
                    </div>
                </div>
            </div>

            <!-- Notify Customers Card -->
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0 p-3">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bi bi-envelope-paper display-4 text-danger"></i>
                        </div>
                        <h5 class="card-title">Notify Customers</h5>
                        <p class="card-text">Send emails for ready prescriptions.</p>
                        <a class="btn btn-outline-primary" href="/Pharmasist/NotifyCustomers">Email</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
