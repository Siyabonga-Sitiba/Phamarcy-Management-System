@* @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Phamarcy_Management__System.Models.PharmacistModels.PrescriptionUploadViewModel

@{
    ViewData["Title"] = "Prescription Refill Request";
  
    Layout = "_PharmacistLayout";

}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>Prescription Refill Request Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  
</head>
<body class ="p-4 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <form asp-action="Prescription" method="post">
                    <div>
                        <label>Doctor Name</label>
                        <input asp-for="DoctorName" class="form-control" />
                        <span asp-validation-for="DoctorName" class="text-danger"></span>
                    </div>

                    <div>
                        <label>Doctor Specialty</label>
                        <input asp-for="DoctorSpecialty" class="form-control" />
                        <span asp-validation-for="DoctorSpecialty" class="text-danger"></span>
                    </div>

                    <div>
                        <label>Prescription Date</label>
                        <input asp-for="PrescriptionDate" class="form-control" type="date" />
                        <span asp-validation-for="PrescriptionDate" class="text-danger"></span>
                    </div>

                    <div>
                        <h4>Medications</h4>
                        <div id="medication-list">
                            @for (int i = 0; i < Model.Medications.Count; i++)
                            {
                                <div class="medication-entry">
                                    <label>Name</label>
                                    <input asp-for="Medications[@i].Name" class="form-control" />
                                    <span asp-validation-for="Medications[@i].Name" class="text-danger"></span>

                                    <label>Dosage</label>
                                    <input asp-for="Medications[@i].Dosage" class="form-control" />
                                    <span asp-validation-for="Medications[@i].Dosage" class="text-danger"></span>

                                    <label>Quantity</label>
                                    <input asp-for="Medications[@i].Quantity" class="form-control" type="number" />
                                    <span asp-validation-for="Medications[@i].Quantity" class="text-danger"></span>

                                    <label>Instructions</label>
                                    <input asp-for="Medications[@i].Instructions" class="form-control" />

                                    <label>Repeats</label>
                                    <input asp-for="Medications[@i].Repeats" class="form-control" type="number" />
                                </div>
                            }
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit Prescription</button>
                </form>



        </div>

    </div>
    
</body>
</html>
 *@