<!-- PharmacistView.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>View Prescription</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
    <div class="container">
        <h2>Prescription Details</h2>
        <div id="prescriptionDetails" class="mt-4"></div>
        <a href="index.html" class="btn btn-secondary mt-3">Back</a>
    </div>

    <script>
   
           const mockData = {
            123: {
                patient: 'Senzo S',
                drug: 'Amoxicillin',
                dosage: '250mg',
                date: '2025-05-07',
                status: 'Pending',
                notes: 'Take after meals. Monitor for allergic reaction.'
            }
        };

        // Extract the prescription ID from the URL
        const urlParts = window.location.pathname.split('/');
        const id = urlParts[urlParts.length - 1];

        const prescription = mockData[id];
        const container = document.getElementById('prescriptionDetails');


            if (prescription && container) {
            container.innerHTML = `
                <p><strong>Patient:</strong> ${prescription.patient}</p>
                <p><strong>Drug:</strong> ${prescription.drug}</p>
                <p><strong>Dosage:</strong> ${prescription.dosage}</p>
                <p><strong>Status:</strong> ${prescription.status}</p>
                <p><strong>Date:</strong> ${prescription.date}</p>
                <p><strong>Notes:</strong> ${prescription.notes}</p>
            `;
        } else {
            container.innerHTML = '<p class="text-danger">Prescription not found.</p>';
        }
    </script>
</body>
</html>
