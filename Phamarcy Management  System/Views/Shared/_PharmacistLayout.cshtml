<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pharmacist System</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>


        <header>
            <div class="header-container">


      @*   <div class="container mx-auto px-4 py-4 flex items-center justify-between"> *@
            <!-- Logo and Navigation -->
            <a asp-controller="Pharmasist" asp-action="PrescriptionInbox" class="logo-container">
                <img src="~/Logo/Szs Pharmacy Logo.png" alt="Pharmacy Logo" class="logo-img" />
                <span class="logo-text">SZS <span style="color:darkblue">Pharmacy</span></span>
            </a>

            <nav class="navbar">
                <a asp-area="" asp-controller="Pharmasist" asp-action="MYPHARMDASHBOARD">HOME</a>

                <div class="nav-item dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-target="prescriptionDropdown">MANAGE CUSTOMER ORDERS </a>
                    <ul id="prescriptionDropdown" class="dropdown-menu">
                        <li><a asp-controller="Pharmasist" asp-action="PrescriptionInbox"> CUSTOMER ORDERS</a></li>
                    </ul>

                </div>

                <div class="nav-item dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-target="patientDropdown">PATIENT INFO </a>
                    <ul id="patientDropdown" class="dropdown-menu">
                        <li><a asp-controller="Pharmasist" asp-action="PatientInfo">PATIENT INFO</a></li>
                    </ul>

                </div>

              
              
            </nav>
                <div class="user-icon dropdown">
                    <img src="~/Logo/User-Icon.jpg" alt="User Icon" class="user-avatar" />
                    <div class="user-details">
                        <span class="user-name">Senzo Sigcu</span>
                        <span class="user-role">Pharmacist</span>
                    </div>
                    <ul class="dropdown-menu user-menu">
                        <li><a asp-controller="Account" asp-action="Profile">View Profile</a></li>
                        <li><a asp-controller="Pharmacy" asp-action="PharmacistLandingPage">Logout</a></li>
                    </ul>
                </div>
                 
       </div>
    </header>


    <div class="container" style="margin-top: 100px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Pharmacist System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", required: false)

</body>
</html>
