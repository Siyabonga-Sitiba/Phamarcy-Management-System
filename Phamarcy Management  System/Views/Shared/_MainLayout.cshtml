
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ibhayi Pharmacy</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />



</head>
<body>
    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ibhayi Pharmacy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                     
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-plus"></i> Register
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        

    </header> 
    <!-- MAIN CONTENT INJECTION POINT -->
    <main class="container-fluid pb-4">
        @RenderBody()
    </main>



    <!-- SECTION 2: SUBSYSTEMS -->
    <style>
         section.py-5.bg-light {
            padding-top: 3rem;
            padding-bottom: 3rem;
        }

            section.py-5.bg-light .btn.btn-3d {
                font-size: 1.5rem;
                padding: 1rem 1.5rem;
                border-radius: 0.5rem;
                font-weight: 600;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            }

            section.py-5.bg-light .subsystem-card {
                border: 1px solid #dee2e6;
                border-radius: 1rem;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
                padding: 2rem;
                height: 100%;
                transition: transform 0.2s ease;
            }

                section.py-5.bg-light .subsystem-card:hover {
                    transform: translateY(-4px);
                }

            section.py-5.bg-light img.img-fluid {
                max-height: 180px;
                width: 100%;
                object-fit: cover;
                border-radius: 0.75rem;
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
                transition: transform 0.3s ease;
            }

                section.py-5.bg-light img.img-fluid:hover {
                    transform: scale(1.05);
                } 

        .hero-section {
            position: relative;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                inset: 0;
                background-color: rgba(0, 0, 0, 0.4); /* dark overlay */
                z-index: 1;
            }

            .hero-section .container {
                position: relative;
                z-index: 2;
            }



    </style>

    <!-- SECTION 1: HERO / OVERLAY SECTION -->
    <section class="hero-section text-white d-flex align-items-center" style="background-image: url('/wwwroot/css/Page1.png'); background-size: cover; background-position: center; height: 500px;">
        <div class="container text-center">
            <h1 class="display-4 fw-bold">Welcome to Ibhayi Pharmacy</h1>
            <p class="lead">Your trusted health partner, now digital.</p>
            <a href="#subsystems" class="btn btn-light btn-lg mt-3">Explore Our Services</a>
        </div>
    </section>

    <!-- SECTION 2: SUBSYSTEM ENTRY CARDS -->
    <section id="subsystems" class="py-5">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold text-primary">Access a Subsystem</h2>
            <div class="row g-4">
                <!-- Customer -->
                <div class="col-md-4">
                    <div class="card subsystem-card h-100 p-4 text-center shadow-sm">
                        <a asp-controller="Customer" asp-action="Dashboard" class="btn btn-3d btn-outline-primary mb-3 w-100 fs-5">
                            <i class="bi bi-box-seam me-2"></i> Customer
                        </a>
                        <img src="~/css/pharmacistHome.jpg" alt="Customer" class="img-fluid rounded shadow" />
                    </div>
                </div>

                <!-- Pharmacist -->
                <div class="col-md-4">
                    <div class="card subsystem-card h-100 p-4 text-center shadow-sm">
                        <a asp-controller="Pharmasist" asp-action="MYPHARMDASHBOARD" class="btn btn-3d btn-outline-success mb-3 w-100 fs-5">
                            <i class="bi bi-file-medical me-2"></i> Pharmacist
                        </a>
                        <img src="~/css/pharmacistHome.jpg" alt="Pharmacist" class="img-fluid rounded shadow" />
                    </div>
                </div>

                <!-- Pharmacy Manager -->
                <div class="col-md-4">
                    <div class="card subsystem-card h-100 p-4 text-center shadow-sm">
                        <a asp-controller="PharmacyManager" asp-action="Dashboard" class="btn btn-3d btn-outline-dark mb-3 w-100 fs-5">
                            <i class="bi bi-chat-dots me-2"></i> Pharmacy Manager
                        </a>
                        <img src="~/css/pharmacistHome.jpg" alt="Manager" class="img-fluid rounded shadow" />
                    </div>
                </div>
            </div>
        </div>
    </section>




    <!-- SECTION 3: LOGIN/REGISTER MOCKUP -->
    <section class="py-16" style="background-color: #e0f7ff;">
        <div class="login-register-wrapper">
            <div class="container">

                <!-- Log In Card -->
                <div class="card">
                    <div class="user-icon">👤</div>
                    <input type="text" placeholder="Username">
                    <input type="password" placeholder="Password">

                    <div class="remember-me">
                        <input type="checkbox" id="remember">
                        <label for="remember">Remember me</label>
                    </div>

                    <button class="btn btn-login">Log In</button>
                    <a href="#" class="forgot">Forgot password?</a>
                </div>

                <!-- Sign Up Card -->
                <div class="card signup-card">
                    <h2>SIGN UP</h2>
                    <input type="text" placeholder="Username">
                    <input type="email" placeholder="E-Mail">
                    <input type="password" placeholder="Password">
                    <input type="password" placeholder="Confirm Password">
                    <button class="btn btn-signup">CREATE ACCOUNT</button>
                </div>
            </div>
        </div>

        <style>
            .login-register-wrapper {
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 2rem 1rem;
            }

                .login-register-wrapper .container {
                    display: flex;
                    gap: 40px;
                    justify-content: center;
                    flex-wrap: nowrap; /* Prevent wrapping on smaller screens */
                }

            .card {
                display: flex;
                flex-direction: column;
                width: 300px;
                padding: 2rem;
                border-radius: 12px;
                border-radius: 30px;
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
                background-color: white;
                text-align: center;
            }

            .signup-card {
                background-color: #0b79c1;
                color: white;
                width: 500px; /* Slightly bigger than regular card */
                padding: 2.5rem;
            }

            .card h2 {
                margin-bottom: 20px;
                font-size: 26px;
            }

            .user-icon {
                font-size: 80px;
                color: #0b79c1;
                margin-bottom: 20px;
            }

            input[type="text"],
            input[type="email"],
            input[type="password"] {
                width: 100%;
                padding: 10px;
                margin: 8px 0;
                border: none;
                border-bottom: 2px solid #ccc;
                background: transparent;
                font-size: 16px;
                color: #333;
            }

            .signup-card input {
                color: white;
                border-bottom: 2px solid white;
            }

                .signup-card input::placeholder {
                    color: white;
                }

            .remember-me {
                display: flex;
                align-items: center;
                margin-top: 10px;
                font-size: 14px;
                color: #555;
            }

                .remember-me input {
                    margin-right: 8px;
                }

            .btn {
                margin-top: 20px;
                width: 100%;
                padding: 12px;
                border: none;
                border-radius: 25px;
                font-size: 16px;
                cursor: pointer;
            }

            .btn-login {
                background-color: #0b79c1;
                color: white;
            }

            .btn-signup {
                background-color: white;
                color: #0b79c1;
                font-weight: bold;
            }

            .forgot {
                margin-top: 10px;
                font-size: 14px;
                color: #0b79c1;
                text-decoration: none;
                display: inline-block;
            }

            /* Optional responsive tweak if cards can't fit on very small screens */
            @@media (max-width: 640px) {
                .login-register-wrapper .container {
                    flex-direction: row;
                    flex-wrap: wrap;
                }

                .card {
                    width: 90%;
                    max-width: 300px;
                }
            }
        </style>

    </section>


    <!-- SECTION 4: CONTACT US -->
    <section class="bg-gray-800 text-white py-16 px-4">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-3xl font-bold mb-4">Contact Us</h2>
            <p class="mb-6">Have questions or need support? Get in touch with us directly.</p>
            <form class="grid gap-4 md:grid-cols-2 text-black">
                <input type="text" placeholder="Full Name" class="p-3 rounded" />
                <input type="email" placeholder="Email" class="p-3 rounded" />
                <textarea placeholder="Your Message" rows="4" class="p-3 rounded md:col-span-2"></textarea>
                <button type="submit" class="btn btn-3d md:col-span-2">Send Message</button>
            </form>
        </div>
    </section>


    <!-- FOOTER -->
    <footer class="footer">
        &copy; @DateTime.Now.Year Ibhayi Pharmacy - <a asp-controller="Home" asp-action="Privacy">Privacy</a> | <a href="#">Terms</a>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
